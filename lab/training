map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

server {
    listen 443;
    ssl_certificate /etc/nginx/star-aquarium-instance-h2o-ai.crt;
    ssl_certificate_key /etc/nginx/star-aquarium-instance-h2o-ai.key;

    ssl on;
    ssl_session_cache  builtin:1000  shared:SSL:10m;

    client_max_body_size 0;

    # By default, everything goes to waved.
    location / {
      proxy_set_header Host $host;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection upgrade;
      proxy_set_header Accept-Encoding gzip;
      proxy_read_timeout 20d;

      proxy_pass http://localhost:10101/;
    }

    # Only the vscode-specific stuff goes to vscode.
    location /vscode/ {
      proxy_set_header Host $host;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection upgrade;
      proxy_set_header Accept-Encoding gzip;
      proxy_read_timeout 20d;

      proxy_pass http://localhost:8080/;
    }
}
